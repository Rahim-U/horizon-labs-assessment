# Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development  # Options: development, production

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CRITICAL: Change this in production!
# Generate a secure key with: python -c 'import secrets; print(secrets.token_urlsafe(64))'
SECRET_KEY=secret-key-change-in-production-MUST-BE-64-CHARS-MINIMUM-PLEASE-CHANGE

# JWT Algorithm (do not change unless you know what you're doing)
ALGORITHM=HS256

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=60        # Access token expires in 60 minutes
REFRESH_TOKEN_EXPIRE_DAYS=30          # Refresh token expires in 30 days

# =============================================================================
# PASSWORD VALIDATION
# =============================================================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true       # Require at least one uppercase letter
PASSWORD_REQUIRE_LOWERCASE=true       # Require at least one lowercase letter
PASSWORD_REQUIRE_DIGITS=true          # Require at least one digit
PASSWORD_REQUIRE_SPECIAL=true         # Require at least one special character

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60              # General API rate limit per minute
RATE_LIMIT_AUTH_PER_MINUTE=5          # Auth endpoints rate limit per minute

# =============================================================================
# DATABASE
# =============================================================================
# SQLite (Development only)
DATABASE_URL=sqlite:///./backend.db

# PostgreSQL (Production recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/taskmanagement

# MySQL (Alternative)
# DATABASE_URL=mysql://user:password@localhost:3306/taskmanagement

# Database pool settings (for production databases)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true

# Auto-create tables on startup (disable in production, use migrations)
AUTO_CREATE_TABLES=false

# =============================================================================
# CORS SETTINGS
# =============================================================================
# CRITICAL: Set specific origins in production! Comma-separated list.
# Development default: http://localhost:5173,http://localhost:3000
# Production example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# API SETTINGS
# =============================================================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=Task Management API
PROJECT_VERSION=1.0.0

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
# SMTP Configuration (required for email verification and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Task Management

# Email token expiration
EMAIL_VERIFICATION_EXPIRE_HOURS=24    # Verification link expires in 24 hours
PASSWORD_RESET_EXPIRE_HOURS=1         # Password reset link expires in 1 hour

# =============================================================================
# REDIS SETTINGS (Optional - for caching)
# =============================================================================
REDIS_ENABLED=false                   # Set to true to enable Redis caching
REDIS_URL=redis://localhost:6379/0    # Redis connection URL
CACHE_TTL_SECONDS=300                 # Cache time-to-live in seconds (5 minutes)

# =============================================================================
# FRONTEND URL
# =============================================================================
# Used for generating links in emails (verification, password reset)
FRONTEND_URL=http://localhost:5173